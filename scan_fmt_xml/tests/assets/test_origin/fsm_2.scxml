<scxml 
  version="1.0"
  xmlns="http://www.w3.org/2005/07/scxml"
  datamodel="ecmascript"
  name="fsm_2"
  initial="idle">

  <state id="idle">
    <transition event="message" target="finished">
      <send event="reply" targetexpr="_event.origin"/>
    </transition>
  </state>

  <state id="finished"/>
</scxml>
